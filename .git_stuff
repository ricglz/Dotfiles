alias g='git'

alias ga='git add'
alias gaa='git add --all'
alias gap='git add -p'

alias gb='git branch'
alias gbD='git branch -D'
alias gba='git branch -a'
alias gbd='git branch -d'
alias gbda='git branch --no-color --merged | command grep -vE "^(\*|\s*(master|develop|dev)\s*$)" | command xargs -n 1 git branch -d'
alias gbl='git log -p -M --follow --stat --'
alias gbm='git branch -m'

alias gcb='git checkout -b'
alias gcl='git clone'
alias gcm='git commit -m'
alias gco='git checkout'
alias gcod='git checkout dev'
alias gcom='git checkout master'

alias gd='git diff --minimal'

alias gfa='git fetch --all --prune'

alias gl='git pull origin $(git_current_branch)'
alias glog='git log -10 --decorate --graph'

alias gm='git merge'

alias gp='git push origin "$(git_current_branch)"'
alias gpf='git push --force origin "$(git_current_branch)"'

alias greb='git rebase'
alias greba='git rebase --abort'
alias grebc='git rebase --continue'
alias grebd='git rebase dev'
alias grebm='git rebase master'
alias grebs='git rebase --skip'
alias gres='git restore'
alias gress='git restore --staged'
alias grst='git reset --soft'

alias gst='git status'
alias gsta='git stash push'
alias gstat='git --no-pager diff --shortstat'
alias gstp='git stash pop'
